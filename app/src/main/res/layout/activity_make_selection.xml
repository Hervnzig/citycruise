<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.LoginSignUp.MakeSelection"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_selection_title"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:fontFamily="@font/muli_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_selection_text"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/muli_extralight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="15dp"
            android:background="@color/lightWhite"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_phonelink_black_24dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sms"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/mobile_icon"/>

            <TextView
                android:id="@+id/mobile_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2506853992"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_below="@id/mobile_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/mobile_icon"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="15dp"
            android:background="@color/lightWhite"
            android:padding="10dp">

            <ImageView
                android:id="@+id/email_icon_temp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_mail_outline_black_24dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/email_temp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via email"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/email_icon_temp"/>

            <TextView
                android:id="@+id/email_temp_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="herve@gmail.com"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_below="@id/email_temp_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/email_icon_temp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>