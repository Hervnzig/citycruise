<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.LoginSignUp.ForgetPassword"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <ImageView
            android:id="@+id/back_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/forget_pass_image"
            android:layout_below="@id/back_pressed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_lock_outline_black_24dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/forget_pass_title"
            android:layout_below="@id/forget_pass_image"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_black"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/forget_pass_desc"
            android:layout_below="@id/forget_pass_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password_detail"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/muli_extralight"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <com.hbb20.CountryCodePicker
            android:id="@+id/forget_country_code_picker"
            android:layout_below="@id/forget_pass_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            app:ccp_areaCodeDetectedCountry="true"
            app:ccp_autoDetectCountry="true"
            app:ccp_showFlag="true"
            app:ccp_showFullName="true"
            app:ccp_showNameCode="true"
            android:background="@drawable/black_border"/>
        
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/forget_phone"
            android:layout_below="@id/forget_country_code_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/lightWhite"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            android:hint="@string/enter_phone_number"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/ic_phone_black_24dp"
            android:textColorHint="@color/black"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_extralight"
                android:inputType="phone"/>

        </com.google.android.material.textfield.TextInputLayout>
        
        <Button
            android:id="@+id/forget_pass_confirm"
            android:layout_below="@id/forget_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_btn"
            android:background="@color/colorPrimary"
            android:onClick="VerifyPhoneNumber"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:id="@+id/forget_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_bg_circle"
            android:elevation="8dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>